{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build:watch": {
      "persistent": true,
      "cache": false
    },
    "tsc-alias:watch": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "lint": {
      "cache": false
    }
  }
}
